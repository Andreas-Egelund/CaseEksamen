<h1>User Editor</h1>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">ZipCode</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users.Values)
            {
                userRowCountchat++;
                <tr>
                    <th scope="row">@userRowCountchat</th>
                    <td>
                        <input type="text" name="Users[@user.Email].Name" value="@user.Name" class="form-control" />
                    </td>
                    <td>
                        <input type="email" name="Users[@user.Email].Email" value="@user.Email" class="form-control" />
                    </td>
                    <td>
                        <input type="password" name="Users[@user.Email].Password" value="@user.Password" class="form-control" />
                    </td>
                    <td>
                        <input type="text" name="Users[@user.Email].Phone" value="@user.Phone" class="form-control" />
                    </td>
                    <td>
                        <input type="text" name="Users[@user.Email].Address" value="@user.Address" class="form-control" />
                    </td>
                    <td>
                        <input type="text" name="Users[@user.Email].City" value="@user.City" class="form-control" />
                    </td>
                    <td>
                        <input type="text" name="Users[@user.Email].ZipCode" value="@user.ZipCode" class="form-control" />
                    </td>
                    <td>
                        <button type="submit" name="EditedUserEmail" value="@user.Email" class="btn btn-primary" asp-page-handler="UpdateUser">Save</button>
                    </td>
                    <td>
                        <button type="submit" name="EditedUserEmail" value="@user.Email" class="btn btn-danger" asp-page-handler="RemoveUser">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>










